<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yamblz.memoryleakssample.ui.ArtistDetailsActivity"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/artist_cover"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/artist_cover"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/artist_albums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/artist_name"
            android:layout_below="@id/artist_name"/>

        <TextView
            android:id="@+id/artist_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/artist_name"
            android:layout_below="@id/artist_albums"/>

        <TextView
            android:id="@+id/artist_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/artist_name"
            android:layout_alignRight="@id/artist_name"
            android:layout_below="@id/artist_tracks"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:textAppearance="?android:attr/textAppearance"/>

    </RelativeLayout>

</ScrollView>
